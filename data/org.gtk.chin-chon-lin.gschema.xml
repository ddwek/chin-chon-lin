<schemalist>
  <schema path="/org/gtk/chin-chon-lin/" id="org.gtk.chin-chon-lin">
    <key name="your-name" type="s">
      <default>"Human"</default>
      <summary>Your name</summary>
      <description>You can place here something different than just the default name.</description>
    </key>
    <key name="total-points" type="i">
      <default>100</default>
      <summary>Total points</summary>
      <description>Maximum scores to be reached for any player causes the end of the game.</description>
    </key>
    <key name="flex-end" type="i">
      <default>0</default>
      <summary>Flexible ending</summary>
      <description>If 1, players can finish the rounds with two combos of three cards each.</description>
    </key>
    <key name="language" type="s">
      <default>"English (US)"</default>
      <summary>Language</summary>
      <description>Choose the language which fits your comfort the most.</description>
    </key>
    <key name="deck-pixbuf" type="s">
      <default>"ar"</default>
      <summary>Deck image</summary>
      <description>Select your favorite flag to be used as the deck image.</description>
    </key>
  </schema>
</schemalist>
